@using Application.DTOs
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model Dashboard

<div class="content-body">
    <div class="container-fluid mt-3">
        <div class="row">
            <div class="col-lg-3 col-sm-6">
                <div class="card gradient-1">
                    <div class="card-body">
                        <h3 class="card-title text-white">Tổng nhân viên</h3>
                        <div class="d-inline-block">
                            <h2 class="text-white"></h2>
                            <a>
                                <p class="text-white mb-0">@Model.TongNhanVien</p>
                            </a>
                        </div>
                        <span class="float-right display-5 opacity-5"><i class="fa fa-shopping-cart"></i></span>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="card gradient-2">
                    <div class="card-body">
                        <h3 class="card-title text-white">Tổng lương nhân viên</h3>
                        <div class="d-inline-block">
                            <h2 class="text-white"></h2>
                            <a>
                                <p class="text-white mb-0">@Model.TongLuongNhanVienThangTruoc</p>
                            </a>
                        </div>
                        <span class="float-right display-5 opacity-5"><i class="fa fa-th-large"></i></span>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="card gradient-3">
                    <div class="card-body">
                        <h3 class="card-title text-white">Nhân viên làm việc</h3>
                        <div class="d-inline-block">
                            <h2 class="text-white"></h2>
                            <a>
                                <p class="text-white mb-0">@Model.SoNhanVienLamHomQua</p>
                            </a>
                        </div>
                        <span class="float-right display-5 opacity-5"><i class="fa fa-tags"></i></span>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="card gradient-4">
                    <div class="card-body">
                        <h3 class="card-title text-white">Nhân viên nghỉ</h3>
                        <div class="d-inline-block">
                            <h2 class="text-white"></h2>
                            <a>
                                <p class="text-white mb-0">@Model.SoNhanVienNghiHomQua</p>
                            </a>
                        </div>
                        <span class="float-right display-5 opacity-5"><i class="fa fa-users"></i></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">
                            <h3>Dự án đang tiến hành</h3>
                        </div>
                        <div class="table-responsive">
                            <table id="table-order" class="table table-bordered table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th style="width: 10%">Mã dự án</th>
                                        <th style="width: 15%">Tên dự án</th>
                                        <th style="width: 15%">Ngày bắt đầu</th>
                                        <th style="width: 15%">Ngày kết thúc</th>
                                        <th style="width: 15%">Thưởng</th>
                                        <th style="width: 15%">Số lượng nhân viên</th>
                                        <th style="width: 15%">Tiến độ thực hiện</th>
                                    </tr>
                                </thead>
                                <tbody id="table-order-body">
                                    @{ int i = 0;}
                                    @foreach (DuAnDTO duAn in Model.DuAns)
                                    {
                                        i++;
                                        int progress = (DateTime.Now - (DateTime)duAn.NgayBatDau).Days * 100 / ((DateTime)duAn.NgayKetThuc - (DateTime)duAn.NgayBatDau).Days;
                                        <tr>
                                            <th>@duAn.DuAnId</th>
                                            <td>@duAn.TenDuAn</td>
                                            <td>@duAn.NgayBatDau</td>
                                            <td>@duAn.NgayKetThuc</td>
                                            <td>@duAn.ThuongDuAn</td>
                                            <td>@duAn.SoLuongNhanVien</td>
                                            <td>
                                                <div style="width: 100%; height: 15px; background: #808080; border-radius: 100px">
                                                    <div id="#@i" style="width: @progress%; height: 15px; background: #00ff00; transition: width 5s; border-radius: 100px"></div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>