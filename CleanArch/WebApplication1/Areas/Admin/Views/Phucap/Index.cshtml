@using Application.DTOs
@using Domain.Entities
@using Infrastructure.Persistence.Actions
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model (List<PhuCapDTO> phuCapDTOs, ThongTinDuLieuCuoi thongTinDuLieuCuois, PhuCapDTO phuCapDTO)
<div class="content-body">

    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="./index.php">Dashboard</a></li>
                <li class="breadcrumb-item active">Categories</li>
            </ol>
        </div>
    </div>
    <!-- row -->

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-4 col-md-12">
                <div class="card">
                    <div class="card-body">
                        @if (ViewBag.Update == "yes")
                        {
                            <div class="card-title">
                                <h4>Thêm Dự Án</h4>
                                @if (ViewBag.Error != null)
                                {
                                    <h5><p class="td-center" style="color:red;">@ViewBag.Error</p></h5>
                                }
                            </div>
                            <form method="post" asp-controller="PhuCap" asp-action="Update">
                                <div class="form-group">
                                    <label for="maphucap">Mã phụ cấp</label>
                                    <input type="text" value="@Model.phuCapDTO.PhuCapId" placeholder="Mã dự án" class="form-control" name="PhuCapId" required>
                                </div>
                                <div class="form-group">
                                    <label for="tenphucap">Tên tên phụ cấp</label>
                                    <input type="text" value="@Model.phuCapDTO.TenPhuCap" placeholder="Tên dự án" class="form-control" name="TenPhuCap" required>
                                </div>
                                <div class="form-group">
                                    <label for="tienphucap">Tiền phụ cấp</label>
                                    <input type="text" value="@Model.phuCapDTO.TienPhuCap" placeholder="Thưởng dự án" class="form-control" name="TienPhuCap" required>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="themphucap" name="themphucap" class="btn btn-primary">
                                </div>
                            </form>
                        }
                        else
                        {
                            <div class="card-title">
                                <h4>Thêm Dự Án</h4>
                                @if (ViewBag.Error != null)
                                {
                                    <h5><p class="td-center" style="color:red;">@ViewBag.Error</p></h5>
                                }
                            </div>
                            <form method="post" asp-controller="DuAn" asp-action="AddPhuCap">
                                <div class="form-group">
                                    <label for="maphucap">Mã phụ cấp</label>
                                    <input type="text" value="@Model.phuCapDTO.PhuCapId" placeholder="Mã dự án" class="form-control" name="PhuCapId" required>
                                </div>
                                <div class="form-group">
                                    <label for="tenphucap">Tên tên phụ cấp</label>
                                    <input type="text" value="@Model.phuCapDTO.TenPhuCap" placeholder="Tên dự án" class="form-control" name="TenPhuCap" required>
                                </div>
                                <div class="form-group">
                                    <label for="tienphucap">Tiền phụ cấp</label>
                                    <input type="text" value="@Model.phuCapDTO.TienPhuCap" placeholder="Thưởng dự án" class="form-control" name="TienPhuCap" required>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="themphucap" name="themphucap" class="btn btn-primary">
                                </div>
                            </form>
                        }
                    </div>

                </div>
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">
                            <h4>Thêm nhân viên vào phụ cấp</h4>
                        </div>
                        <form method="post" asp-controller="PhuCap" asp-action="AddNVPC">
                            <div class="form-group">
                                <label for="maphucap">Mã phụ cấp</label>
                                <input type="text" placeholder="" class="form-control" name="PhuCapId" required>
                            </div>
                            <div class="form-group">
                                <label for="manhanvien">Mã nhân viên</label>
                                <input type="text" placeholder="" class="form-control" name="NhanVienId" required>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Thêm nhân viên" name="edit-category" class="btn btn-primary">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-8 col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">
                            <h3>Dự Án</h3>
                            @if (ViewBag.ErrorRemove == "yes")
                            {
                                <p class="td-center" style="color:red;">@ViewBag.Remove</p>
                            }
                            else
                            {
                                <p class="td-center" style="color:green;">@ViewBag.Remove</p>
                            }
                        </div>
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã phụ cấp</th>
                                        <th>Tên phụ cấp</th>
                                        <th>Thưởng phụ cấp</th>
                                        <th>Chi tiết</th>
                                        <th>Sửa</th>
                                        <th>Xóa</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (PhuCapDTO phuCapDTO in Model.phuCapDTOs)
                                    {
                                        <tr>
                                            <td>@phuCapDTO.PhuCapId</td>
                                            <td>@phuCapDTO.TenPhuCap</td>
                                            <td>@phuCapDTO.TienPhuCap</td>
                                            <td style="text-align: center"><a asp-controller="PhuCap" asp-action="PhucapDetail" method="post" ><button type="button" class="btn btn-primary"><i class="fa fa-info"></i></button></a></td>
                                            <td style="text-align: center"><a asp-controller="PhuCap" asp-action="UpdateId" method="post"  ><button type="button" class="btn btn-primary"><i class="fa fa-pencil"></i></button></a></td>
                                            <td style="text-align: center"><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#@(phuCapDTO.PhuCapId
                                            + "xoa")"><i class="fa fa-close"></i></button></td>
                                        </tr>
                                        
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
     @foreach (PhuCapDTO phuCapDTO in Model.phuCapDTOs)
        {
            <div class="modal fade" id="@(phuCapDTO.PhuCapId + "xoa")" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h3 class="modal-title" id="exampleModalLabel" style="margin: auto;text-align: center;">Bạn chắc chắn muốn xóa<br>dự án @phuCapDTO.TenPhuCap?</h3>
                        </div>
                        <div class="modal-footer" style="margin: auto;">
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Hủy</button>
                            <form method="post" asp-controller="DuAn" asp-action="Remove">
                                <button name="DuAnId" type="submit" class="btn btn-danger" value="@phuCapDTO.PhuCapId">Xóa dự án</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <!-- #/ container -->
</div>