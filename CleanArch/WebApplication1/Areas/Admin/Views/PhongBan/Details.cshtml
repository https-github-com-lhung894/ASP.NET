@using Application.DTOs
@using Domain.Entities
@using Infrastructure.Persistence.Actions
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model (List<QuanLyNhanVien> quanLyNhanViens, PhongBanDTO PhongBanDTO)
<div class="content-body">
    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="PhongBan" asp-action="Index">Phòng Ban</a></li>
                <li class="breadcrumb-item active">Danh Sách Nhân Viên</li>
            </ol>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title row">
                            <div class="col-md-12 mb-4">
                                <h3 class="td-center">DANH SÁCH NHÂN VIÊN TRONG PHÒNG BAN</h3>
                                <h3 class="td-center">@Model.PhongBanDTO.TenPhongBan</h3>
                            </div>
                            <div class="col-md-4">
                                <form class="navbar-form">
                                    <div class="input-group no-border">
                                        <input type="search" value="" class="form-control" placeholder="Search...">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </div>
                                </form>
                            </div>
                            <div class="col-md-8">
                                <a asp-controller="PhongBan" asp-action="Index" style="float:right;">
                                    <button class="btn btn-primary"><span style="margin-right: 10px">Trở về danh sách phòng ban</span><i class="fa fa-arrow-left"></i></button>
                                </a>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead class="text-primary">
                                    <tr>
                                        <th style="width:10%;" class="th-center-bold">Hình ảnh</th>
                                        <th style="width:15%;" class="th-center-bold">Mã nhân viên</th>
                                        <th style="width:20%;" class="th-center-bold">Tên nhân viên</th>
                                        <th style="width:15%;" class="th-center-bold">Phòng ban</th>
                                        <th style="width:15%;" class="th-center-bold">Chức vụ</th>
                                        <th style="width:15%;" class="th-center-bold">Công việc</th>
                                        <th style="width:10%;" class="th-center-bold">Xoá</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (QuanLyNhanVien quanLyNhanVien in Model.quanLyNhanViens)
                                    {
                                        <tr>
                                            <td><img src="./product-img/3_Stripes_Jacquard_Polo_Shirt_Black.jpg" alt="" style="width:100%" ;=""></td>
                                            <td> @quanLyNhanVien.NhanVienId </td>
                                            <td> @quanLyNhanVien.HoNhanVien @quanLyNhanVien.TenNhanVien </td>
                                            <td> @quanLyNhanVien.TenPhongBan </td>
                                            <td> @quanLyNhanVien.TenChuVu </td>
                                            <td> @quanLyNhanVien.TenCongViec </td>
                                            @if (quanLyNhanVien.PhongBanId == "null")
                                            {
                                                <td class="td-center">
                                                    <button type="button" class="btn btn-primary" disabled><i class="fa fa-close"></i></button>
                                                </td>
                                            }
                                            else
                                            {
                                                <td class="td-center">
                                                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#@(quanLyNhanVien.NhanVienId + "xoa")"><i class="fa fa-close"></i></button>
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @if (Model.PhongBanDTO.PhongBanId != "null")
        {
            @foreach (QuanLyNhanVien quanLyNhanVien1 in Model.quanLyNhanViens)
            {
                <div class="modal fade" id="@(quanLyNhanVien1.NhanVienId + "xoa")" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h3 class="modal-title" id="exampleModalLabel" style="margin: auto;">Bạn chắc chắn muốn xóa nhân viên<br />@quanLyNhanVien1.HoNhanVien @quanLyNhanVien1.TenNhanVien khỏi phòng ban? </h3>
                            </div>
                            <div class="modal-footer" style="margin: auto;">
                                <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                                <form method="post" asp-controller="PhongBan" asp-action="RemoveNVPB">
                                    <button name="id" type="submit" class="btn btn-danger" value="@quanLyNhanVien1.NhanVienId">Yes, delete it !</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
    <!-- #/ container -->
</div>